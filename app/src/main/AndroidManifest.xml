<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.health.yaopintong" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SearchActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ScanActivity"
            android:label="@string/title_activity_scan" />
        <activity
            android:name=".NearActivity"
            android:label="@string/title_activity_near" />
        <activity
            android:name=".AlarmActivity"
            android:label="@string/title_activity_alarm" />
        <activity
            android:name=".MainTabActivity"
            android:label="@string/title_activity_main_tab" >
        </activity>
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/title_activity_welcome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TypeGridConActivity"
            android:label="@string/title_activity_type_grid_con" >
        </activity>
        <activity
            android:name=".activities.SickActivity"
            android:label="@string/title_activity_sick" >
        </activity>
    </application>

</manifest>
