<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.health.yaopintong.MainTabActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/maintab_rg_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maintab_rb_search"
                style="@style/mainRadioButton"
                android:background="@drawable/main_tab_search"
                android:checked="true" />

            <RadioButton
                android:id="@+id/maintab_rb_scan"
                style="@style/mainRadioButton"
                android:background="@drawable/main_tab_scan" />

            <RadioButton
                android:id="@+id/maintab_rb_near"
                style="@style/mainRadioButton"
                android:background="@drawable/main_tab_near" />

            <RadioButton
                android:id="@+id/maintab_rb_alarm"
                style="@style/mainRadioButton"
                android:background="@drawable/main_tab_alarm" />
        </RadioGroup>
    </LinearLayout>

</TabHost>
